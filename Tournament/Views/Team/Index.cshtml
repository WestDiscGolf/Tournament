@model IEnumerable<Tournament.ViewModels.TeamViewModel>

@{
    ViewBag.Title = "Teams";
}

<div class="row">
    <div class="span12">
        <ul class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home") <span class="divider">/</span>
            </li>
            <li class="active">
                Teams
            </li>
        </ul>
        <div class="page-header">
            <h1>
                Teams
            </h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="span12">
        <table class="">
            @foreach (var team in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/Images/no_team_logo.png")" alt="@team.Name"/>
                    </td>
                    <td>
                        <h2>@Html.ActionLink(team.Name, "detail", new { id = team.Id.Id(), slug = team.Slug }, null)</h2>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>