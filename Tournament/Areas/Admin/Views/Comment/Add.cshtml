@model Tournament.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CommentViewModel</legend>
        
        @Html.AntiForgeryToken()

        @Html.EditorFor(model => model.AssociatedItemId)

        <div class="editor-label">
            @Html.LabelFor(model => model.DateTime)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateTime, "{0:dd/MM/yyyy}")
            @Html.ValidationMessageFor(model => model.DateTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubmittedBy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubmittedBy)
            @Html.ValidationMessageFor(model => model.SubmittedBy)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}